---
- name: Configure RHEL 8 system
  hosts: all
  become: yes
  tasks:
    - name: Set swappiness to 1
      sysctl:
        name: vm.swappiness
        value: 1
        state: present
        reload: yes

    - name: Disable transparent huge pages
      command: echo never > /sys/kernel/mm/transparent_hugepage/enabled
      args:
        warn: false
      become: yes
      register: disable_thp

    - name: Persist transparent huge pages setting
      lineinfile:
        path: /etc/rc.local
        line: "echo never > /sys/kernel/mm/transparent_hugepage/enabled"
        state: present
        create: yes
      when: disable_thp.changed

    - name: Set execute permissions for /etc/rc.d/rc.local
      file:
        path: /etc/rc.d/rc.local
        mode: u+x
        state: file

    - name: Stop and disable firewalld
      service:
        name: firewalld
        state: stopped
        enabled: no

    - name: Set SELinux to permissive
      selinux:
        policy: targeted
        state: permissive

    - name: Stop and disable fapolicyd
      service:
        name: fapolicyd
        state: stopped
        enabled: no

    - name: Install rng-tools and haveged
      yum:
        name:
          - rng-tools
          - haveged
        state: present
